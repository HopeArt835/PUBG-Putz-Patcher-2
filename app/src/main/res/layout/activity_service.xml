<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/layout_view">

		<RelativeLayout
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/layout_icon_control_view"
			android:visibility="gone">

			<ImageView
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:src="@drawable/ic_logo"
				android:id="@+id/imageview_control"
				android:layout_margin="10dp"/>

		</RelativeLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/layout_main_view"
			android:alpha="0.9"
			android:visibility="visible"
			android:background="#E91E3A4E">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Putz-Patcher"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:textColor="#FFFFFFFF"
					android:layout_margin="10dp"/>

				<LinearLayout
					android:clickable="true"
					android:focusable="true"
					android:foreground="?android:attr/selectableItemBackground"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerVertical="true"
					android:gravity="center"
					android:padding="5dp"
					android:id="@+id/layout_close_main_view">

					<ImageView
						android:layout_width="35dp"
						android:layout_height="35dp"
						android:text="Text"
						android:src="@drawable/ic_close"
						android:background="#90000000"/>

				</LinearLayout>

			</RelativeLayout>

			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="wrap_content">

					<RelativeLayout
						android:orientation="vertical"
						android:layout_width="wrap_content"
						android:layout_height="50dp"
						android:id="@+id/layout_icon_control_view"
						android:visibility="visible">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:orientation="horizontal">

							<ImageView
								android:id="@+id/playerBtn"
								android:layout_width="96dp"
								android:layout_height="50dp"
								android:layout_weight="1"
								android:gravity="center"
								android:text="Text"
								android:src="@drawable/memory"/>

						</LinearLayout>

					</RelativeLayout>

					<LinearLayout
						android:id="@+id/players"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="#727C7B7B"
						android:orientation="vertical"
						android:visibility="visible">

						<Switch
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="On Esp"
							android:textColor="#FFFFFFFF"
							android:id="@+id/Count1"
							android:paddingRight="10dp"
							android:paddingLeft="10dp"/>

						<Switch
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Show Count"
							android:textColor="#FFFFFFFF"
							android:id="@+id/Count"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"/>

						<Switch
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Show Team"
							android:textColor="#FFFFFFFF"
							android:id="@+id/Team"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isBox"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Box"
							android:textColor="#FFFFFFFF"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isLine"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Line"
							android:textColor="#FFFFFFFF"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isDist"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Distance"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isHealth"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Health"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/skeleton"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Skelton"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>
                      

						<Switch
							android:id="@+id/isName"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Show Name"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isBack"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="360Â° Alert"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/bot"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Ignore Bot"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Vehicle"
							android:textColor="#FFFFFFFF"
							android:id="@+id/isVehicle"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isitemsDist"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Vehicle Dist"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/isEnemyWeapon"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Loot Dist"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/Lootitems"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Loot Items"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/Loot"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Loot Box"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

						<Switch
							android:id="@+id/Airdrop"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:checked="true"
							android:text="Airdrop"
							android:textColor="#FFFFFFFF"
                             android:paddingRight="10dp"
                             android:paddingLeft="10dp"/>

					</LinearLayout>

					<Button
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="#00000000"
						android:text="T A P   H E R E   T O   E X I T"
						android:layout_gravity="center"
						android:layout_marginBottom="10dp"
						android:id="@+id/btn_exit"
						android:textColor="#FFDDFF00"/>

				</LinearLayout>

			</ScrollView>

		</LinearLayout>

	</RelativeLayout>

</FrameLayout>

